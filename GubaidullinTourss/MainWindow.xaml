<Window x:Class="GubaidullinTourss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Background="#bae3e8" />
        <Image Grid.Row="0" HorizontalAlignment="Left" Source="Res/pic.png" />
        <TextBlock Grid.Row="0" Text="Header" FontSize="30" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <Grid Row="2" Background="#445c93" />
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_OnContentRendered" Grid.Row="1" Name="MainFrame" />
        <Button Content="Back" Name="BackButton" HorizontalAlignment="Right"
                Click="BackButton_OnClick" />
    </Grid>
</Window>